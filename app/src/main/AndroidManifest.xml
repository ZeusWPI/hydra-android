<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:tools="http://schemas.android.com/tools"
    package="be.ugent.zeus.hydra"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Network permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- Account permissions -->
    <!-- No longer exists on API 23 and up -->
    <uses-permission
        android:name="android.permission.AUTHENTICATE_ACCOUNTS"
        android:maxSdkVersion="22" />
    <!-- We use our own account, so we no longer need this on higher API levels -->
    <uses-permission
        android:name="android.permission.GET_ACCOUNTS"
        android:maxSdkVersion="22" />
    <!-- No longer exists on API 23 and up -->
    <uses-permission
        android:name="android.permission.MANAGE_ACCOUNTS"
        android:maxSdkVersion="22" />
    <!-- No longer exists on API 23 and up -->
    <uses-permission
        android:name="android.permission.USE_CREDENTIALS"
        android:maxSdkVersion="22" />

    <!-- Sync permissions -->
    <uses-permission android:name="android.permission.READ_SYNC_STATS" />
    <uses-permission android:name="android.permission.READ_SYNC_SETTINGS" />
    <uses-permission android:name="android.permission.WRITE_SYNC_SETTINGS" />

    <!-- Urgent stuff -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <!--
         The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
         Google Maps Android API v2, but you must specify either coarse or fine
         location permissions for the 'MyLocation' functionality. 
    -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <!-- We insert our own calendar provider -->
    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <uses-permission android:name="android.permission.WRITE_CALENDAR" />

    <!-- Our own permission to read courses. -->
    <permission android:name="be.ugent.zeus.hydra.minerva.READ_COURSES"
        android:protectionLevel="signature"
        android:label="@string/permissions_read_courses"
        android:description="@string/permissions_read_courses_desc" />

    <application
        android:name=".HydraApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:logo="@drawable/logo"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:theme="@style/Hydra.Main.NoActionBar"
        android:networkSecurityConfig="@xml/network_security_config">

        <!-- Disable all Firebase analytics in debug mode. -->
        <meta-data android:name="firebase_analytics_collection_deactivated"
            android:value="${disableAnalytics}" />

        <!--
          ~ Disables automatic initialisation of Crashlytics.
          ~
          ~ This is necessary because we want to disable Crashlytics in debug builds. The initialisation happens
          ~ in the HydraApplication.
          -->
        <meta-data android:name="firebase_crashlytics_collection_enabled" android:value="false" />

        <!-- This is used for the Google Maps fragment -->
        <!-- See https://developers.google.com/maps/documentation/android-sdk/config#specify_requirement_for_apache_http_legacy_library -->
        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />

        <!-- Main activity -->
        <activity
            android:name=".MainActivity"
            android:launchMode="singleTop"
            android:theme="@style/Hydra.Main.NoActionBar.SystemWindows">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <meta-data
                android:name="android.app.shortcuts"
                android:resource="@xml/shortcuts" />
        </activity>

        <!-- Settings -->
        <activity
            android:name=".common.preferences.SettingsActivity"
            android:label="@string/action_view_settings"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Hydra.Main">
            <intent-filter>
                <action android:name="android.intent.action.MANAGE_NETWORK_USAGE" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- Association select preference activity -->
        <activity
            android:name=".association.preference.AssociationSelectPrefActivity"
            android:label="Verenigingen"
            android:parentActivityName=".common.preferences.SettingsActivity" />

        <!-- Association select preference activity -->
        <activity
            android:name=".feed.preferences.HomeFeedPrefActivity"
            android:label="@string/feed_pref_card_types_title"
            android:parentActivityName=".common.preferences.SettingsActivity" />

        <!-- Sandwich overview -->
        <activity
            android:name=".resto.sandwich.SandwichActivity"
            android:label="@string/resto_sandwich_activity_title"
            android:parentActivityName=".MainActivity" />

        <!-- The Maps API key -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="${google_maps_key}" />

        <!-- Show a map of resto's -->
        <activity
            android:name=".resto.meta.RestoLocationActivity"
            android:label="@string/resto_location_activity_title"
            android:parentActivityName=".MainActivity" />

        <!-- Show other food items -->
        <activity
            android:name=".resto.extrafood.ExtraFoodActivity"
            android:label="@string/resto_extra_title"
            android:parentActivityName=".MainActivity" />

        <!-- Details about association events. -->
        <activity
            android:name=".association.event.EventDetailsActivity"
            android:label="@string/event_detail_activity_title"
            android:launchMode="singleTop"
            android:parentActivityName=".MainActivity" />

        <!-- Show info items -->
        <activity
            android:name=".info.InfoSubItemActivity"
            android:label="@string/info_sub_item_activity_title"
            android:parentActivityName=".MainActivity" />

        <!-- Display a Schamper article -->
        <activity
            android:name=".schamper.FullArticleActivity"
            android:label="@string/schamper_article_activity_title"
            android:launchMode="singleTop"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Hydra.Main.NoActionBar.SystemWindows" />

        <!-- Show news article -->
        <activity
            android:name=".association.news.NewsArticleActivity"
            android:label="@string/new_article_activity_title"
            android:parentActivityName=".MainActivity" />

        <!-- Show a web view -->
        <activity
            android:name=".common.ui.WebViewActivity"
            android:label="@string/title_activity_hydra_web_view"
            android:parentActivityName=".MainActivity" />

        <!-- Show a Minerva course -->
        <activity
            android:name=".minerva.course.singlecourse.CourseActivity"
            android:label="@string/minerva_course_detail_activity_title"
            android:launchMode="singleTop"
            android:parentActivityName=".MainActivity" />

        <!-- Show a Minerva announcement -->
        <activity
            android:name=".minerva.announcement.SingleAnnouncementActivity"
            android:label="@string/minerva_announcement_detail_activity_title"
            android:parentActivityName=".minerva.course.singlecourse.CourseActivity" />

        <activity
            android:name=".resto.history.HistoryActivity"
            android:label="Historische menu"
            android:launchMode="singleTop"
            android:parentActivityName=".MainActivity" />

        <!-- Show a Minerva agenda item -->
        <activity
            android:name=".minerva.calendar.itemdetails.AgendaActivity"
            android:label="@string/minerva_calendar_detail_activity_title"
            android:parentActivityName=".minerva.course.singlecourse.CourseActivity">
            <intent-filter>
                <action android:name="android.provider.calendar.action.HANDLE_CUSTOM_EVENT" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="vnd.android.cursor.item/event" />
            </intent-filter>
        </activity>

        <!-- Minerva auth activity -->
        <activity
            android:name=".minerva.auth.AuthActivity"
            android:label="@string/minerva_auth_activity_title"
            android:launchMode="singleTask"
            android:parentActivityName=".MainActivity">

            <!-- Intent filters: handle the custom URL scheme -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="hydra-ugent" />
            </intent-filter>
        </activity>

        <!-- SKO overview activity -->
        <activity
            android:name=".sko.OverviewActivity"
            android:label="@string/sko_overview_activity_title"
            android:launchMode="singleTop"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Hydra.Main.NoActionBar.Sko" />

        <!-- SKO preference activity -->
        <activity
            android:name=".sko.preferences.WrapperActivity"
            android:label="@string/sko_pref_activity_title"
            android:parentActivityName=".sko.OverviewActivity"
            android:theme="@style/Hydra.Main.NoActionBar.Sko" />

        <!-- SKO artist page -->
        <activity
            android:name=".sko.lineup.ArtistDetailsActivity"
            android:label="Artiest"
            android:parentActivityName=".sko.OverviewActivity"
            android:theme="@style/Hydra.Main.NoActionBar.Sko.SystemWindows" />

        <!-- Onboarding activity -->
        <activity
            android:name=".onboarding.OnboardingActivity"
            android:theme="@style/Theme.Intro" />
        <activity
            android:name=".common.ui.ExceptionDialogActivity"
            android:theme="@style/Theme.AppCompat.Light.Dialog.Alert" />
        <activity
            android:name=".minerva.calendar.sync.CalendarPermissionActivity"
            android:theme="@style/Theme.AppCompat.Light.Dialog.Alert" />

        <!-- Library details -->
        <activity
            android:name=".library.details.LibraryDetailActivity"
            android:label="Bibliotheek"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Hydra.Main.NoActionBar.SystemWindows" />

        <!-- Firebase messages -->
        <service android:name=".sko.FirebaseMessageService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <!-- Account service -->
        <service android:name=".minerva.account.MinervaService">
            <intent-filter>
                <action android:name="android.accounts.AccountAuthenticator" />
            </intent-filter>

            <meta-data
                android:name="android.accounts.AccountAuthenticator"
                android:resource="@xml/minerva_authenticator" />
        </service>

        <!-- Minerva sync service -->
        <service
            android:name=".minerva.common.sync.MinervaService"
            android:exported="true">
            <intent-filter>
                <action android:name="android.content.SyncAdapter" />
            </intent-filter>

            <meta-data
                android:name="android.content.SyncAdapter"
                android:resource="@xml/minerva_sync" />
        </service>

        <!-- Stub minerva provider -->
        <provider
            android:readPermission="be.ugent.zeus.hydra.minerva.READ_COURSES"
            android:name=".minerva.common.sync.MinervaProvider"
            android:authorities="be.ugent.zeus.hydra.minerva.provider"
            android:exported="true"
            android:label="@string/minerva_sync_provider_label"
            android:syncable="true" />

        <!-- Handles transferring accounts to new devices -->
        <receiver
            android:name=".minerva.account.AccountTransferReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="com.google.android.gms.auth.START_ACCOUNT_EXPORT" />
            </intent-filter>
            <!-- I don't think the ones below are used for non-system apps, but who knows -->
            <intent-filter>
                <action android:name="com.google.android.gms.auth.ACCOUNT_IMPORT_DATA_AVAILABLE" />
            </intent-filter>
            <intent-filter>
                <action android:name="com.google.android.gms.auth.ACCOUNT_EXPORT_DATA_AVAILABLE" />
            </intent-filter>
        </receiver>
        <!-- The accompanying service -->
        <service
            android:name=".minerva.account.AccountTransferService"
            android:exported="false" />

        <!-- Urgent stuff -->
        <!-- This is a music service without sensitive data and thus does not require permissions -->
        <service
            android:name=".urgent.MusicService"
            android:exported="true"
            android:process=":urgent"
            tools:ignore="ExportedService">
            <intent-filter>
                <action android:name="android.media.browse.MediaBrowserService" />
            </intent-filter>
        </service>

        <receiver android:name="android.support.v4.media.session.MediaButtonReceiver">
            <intent-filter>
                <action android:name="android.intent.action.MEDIA_BUTTON" />
            </intent-filter>
        </receiver>

        <!-- Slices stuff -->
        <provider android:name=".resto.menu.slice.SliceProvider"
            android:authorities="be.ugent.zeus.hydra.resto.menu"
            android:exported="true"
            tools:ignore="ExportedContentProvider">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.app.slice.category.SLICE" />
            </intent-filter>
        </provider>

        <receiver android:name = ".resto.menu.slice.UpdatedMenuBroadcastReceiver" android:exported="false">
            <intent-filter>
                <action android:name="be.ugent.zeus.hydra.resto.update" />
            </intent-filter>
        </receiver>
    </application>

</manifest>
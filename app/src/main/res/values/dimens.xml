<resources xmlns:tools="http://schemas.android.com/tools">
    <dimen name="media_control_image">64dp</dimen>
    <!-- Default screen margins, per the Android Design guidelines. -->
    <dimen name="activity_horizontal_margin">16dp</dimen>
    <dimen name="activity_vertical_margin">16dp</dimen>
    <dimen name="content_spacing">8dp</dimen>

    <!-- Material design normal keylines -->
    <dimen name="vertical_padding">16dp</dimen>
    <dimen name="keyline_tab">60dp</dimen><!-- keyline (71) - 12 (tab padding) -->
    <dimen name="large_horizontal_padding">16dp</dimen>

    <dimen name="card_small_horizontal_margin">0dp</dimen>
    <dimen name="card_small_vertical_margin">0dp</dimen>
    <dimen name="resto_menu_tab_spacing">0dp</dimen>

    <!-- We deviate from the MD standard, since it's nicer like this -->
    <dimen name="bottom_toolbar_height">48dp</dimen>

    <!-- Material design dimensions for Cards -->
    <dimen name="card_margin">8dp</dimen>
    <dimen name="card_spacing">8dp</dimen>
    <dimen name="card_margin_half">4dp</dimen>
    <!-- Is always small, use together with big_component -->
    <dimen name="card_margin_small">@dimen/card_margin</dimen>
    <dimen name="card_margin_big_component">0dp</dimen>

    <dimen name="card_actions_padding">8dp</dimen>

    <dimen name="card_title_size_large" tools:ignore="UnusedResources">24sp</dimen>
    <dimen name="card_title_size_small" tools:ignore="UnusedResources">14sp</dimen>
    <dimen name="card_title_size_subtitle" tools:ignore="UnusedResources">14sp</dimen>

    <dimen name="card_title_padding_vertical">16dp</dimen>

    <dimen name="card_title_padding_top">16dp</dimen>
    <dimen name="card_title_padding_top_large_title" tools:ignore="UnusedResources">24dp</dimen>
    <dimen name="card_title_padding_bottom">16dp</dimen>
    <dimen name="card_title_padding_bottom_no_content">24dp</dimen>
    <dimen name="card_title_padding_bottom_subtitle" tools:ignore="UnusedResources">12dp</dimen>

    <dimen name="card_text_size" tools:ignore="UnusedResources">14sp</dimen>

    <dimen name="card_text_padding_vertical">16dp</dimen>
    <dimen name="card_text_padding_top">16dp</dimen>
    <dimen name="card_text_padding_bottom">16dp</dimen>
    <dimen name="card_text_padding_bottom_no_content">24dp</dimen>

    <!-- Material design for two-line text-only lists -->

    <dimen name="list_two_line_padding_vertical">16dp</dimen>
    <!-- This should be 20, but we use 16, since 20 is ugly -->
    <dimen name="list_two_line_padding_horizontal">16dp</dimen>
    <dimen name="list_two_line_primary_text_size" tools:ignore="UnusedResources">16sp</dimen>
    <dimen name="list_two_line_secondary_text_size" tools:ignore="UnusedResources">14sp</dimen>
    <dimen name="list_two_line_margin_horizontal" tools:ignore="UnusedResources">8dp</dimen>

    <!-- Material design for one-line list -->
    <dimen name="list_one_line_padding_vertical">16dp</dimen>
    <dimen name="list_one_line_padding_horizontal">16dp</dimen>
    <dimen name="list_one_line_text_size" tools:ignore="UnusedResources">16sp</dimen>

    <!-- Urgent social buttons -->
    <dimen name="urgent_social_icon_size">64dp</dimen>
</resources>

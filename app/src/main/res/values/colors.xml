<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Hydra colours -->
    <color name="ugent_blue_highlight">#19A3D2</color>
    <color name="ugent_blue_light">#BCD1EF</color>
    <color name="ugent_blue_lighter">#6293D9</color>
    <color name="ugent_blue_medium">#1e64c8</color> <!-- The base UGent colour -->
    <color name="ugent_blue_dark">#003b96</color>
    <color name="ugent_yellow_dark">#FFC100</color> <!-- The secondary colour -->
    <color name="ugent_white">#EAEAEA</color>
    <color name="ugent_grey_light">#C0C0C0</color>
    <color name="ugent_grey_dark">#A3A3A3</color>

    <!-- General colours -->
    <color name="light_blue">#c9d8e7</color>
    <color name="bright_blue">#245b8d</color>
    <color name="dark_blue">#122b44</color>
    <color name="white">@color/material_color_white</color>

    <!-- Overlay colours -->
    <color name="black_overlay">#78000000</color>

    <!--
       ~ SKO colours
       ~ The light blue and red colour are from the official style guide.
       ~ The dark blue colour was extracted from the same document, because the official values result in
       ~ weird, and ugly, colour.
      -->
    <color name="sko_blue_light">#009ADE</color>
    <color name="sko_blue_dark">#005C86</color>
    <color name="sko_red">#E43026</color>

    <!--
      ~ These are functional colours. This means they don't specify a colour itself, but rather a colour for
      ~ a certain feature.
     -->

    <!-- The correspond to the theme attributes -->
    <!-- If possible, use ?attr:colorAccent or similar -->
    <color name="hydra_primary_color">@color/ugent_blue_medium</color>
    <color name="hydra_primary_color_dark">@color/ugent_blue_dark</color>
    <color name="hydra_accent_color">@color/ugent_yellow_dark</color>

    <!-- Text colours -->
    <color name="hydra_text_primary">@color/material_typography_primary_text_color_dark</color>
    <color name="hydra_text_secondary">@color/material_typography_secondary_text_color_dark</color>
    <color name="hydra_text_accent">@color/hydra_primary_color</color>

    <!-- Backgrounds -->
    <color name="hydra_background">@color/ugent_white</color>
    <color name="hydra_background_long_text">@color/material_color_white</color>

    <!-- Custom views -->
    <color name="hydra_now_toolbar_icon_tint">@color/ugent_blue_lighter</color>

    <!--
        ~ The grey colour for the launcher shortcuts background.
        ~ As seen here: https://material.io/guidelines/style/icons.html#icons-app-shortcut-icons,
        ~ the colour must be Solid fill of Material Grey 100 (#F5F5F5)
        -->
    <color name="launcher_shortcut_background">@color/material_color_grey_100</color>
    <color name="hydra_launcher_color">@color/hydra_primary_color</color>
</resources>
<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!--colorPrimary colors map to components and elements, such as app bars and buttons. -->
    <!--colorSecondary colors are most often used as accents on components, such as FABs and -->
    <!--selection controls.-->
    <!-- This colour scheme was generated from https://goo.gl/Mzta1m -->
    <color name="hydra_color_primary">#1e64c8</color>
    <color name="hydra_color_primary_variant_light">#6391fc</color>
    <color name="hydra_color_primary_variant_dark">#003b96</color>
    <color name="hydra_color_secondary">#ffd200</color>
    <color name="hydra_color_secondary_variant_light" tools:ignore="UnusedResources">#ffff52</color>
    <color name="hydra_color_secondary_variant_dark">#c7a100</color>

    <color name="color_background">#fff5f5f5</color>

    <!--"On" colors define how text, icons and strokes are colored in relation to the surface-->
    <!--on which they appear.-->
    <color name="color_on_primary">#ffffff</color>
    <color name="color_on_secondary">#000000</color>
    <color name="color_on_background">#000000</color>
    <color name="color_on_surface">#000000</color>
    <color name="color_on_error">#ffffff</color>

    <!--
       ~ The colour scheme for SKO.
       ~ This colour scheme was generated from https://goo.gl/mpDLkv
      -->
    <color name="sko_primary_colour">#009ade</color>
    <color name="sko_primary_light_colour" tools:keep="@color/sko_primary_light_colour">#61cbff</color>
    <color name="sko_primary_dark_colour">#005C86</color>
    <color name="sko_secondary_colour">#e43026</color>
    <color name="sko_secondary_light_colour" tools:keep="@color/sko_secondary_light_colour">#ff6851</color>
    <color name="sko_secondary_dark_colour" tools:keep="@color/sko_secondary_dark_colour">#aa0000</color>
    <color name="sko_primary_text_colour" tools:keep="@color/sko_primary_text_colour">#000000</color>
    <color name="sko_secondary_text_colour" tools:keep="@color/sko_secondary_text_colour">#000000</color>


    <!-- General colours -->
    <color name="white">@color/material_color_white</color>
    <color name="black" tools:ignore="UnusedResources">@color/material_color_black</color>

    <!--
        ~ The grey colour for the launcher shortcuts background.
        ~ As seen here: https://material.io/guidelines/style/icons.html#icons-app-shortcut-icons,
        ~ the colour must be Solid fill of Material Grey 100 (#F5F5F5)
        -->
    <color name="launcher_shortcut_background">@color/material_color_grey_100</color>
    <color name="hydra_launcher_color">@color/hydra_color_primary</color>
</resources>

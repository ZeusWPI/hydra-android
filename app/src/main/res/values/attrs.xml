<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Attributes for the Google Now-like toolbar -->
    <declare-styleable name="NowToolbar">
        <attr name="icon" format="reference" />
        <attr name="title" format="string" />
        <attr name="menu" format="reference" />
        <attr name="showMenu" format="boolean" />
    </declare-styleable>

    <!-- Attributes for the resto menu -->
    <declare-styleable name="MenuTable">
        <attr name="showKind">
            <flag name="main" value="1" />          <!-- 00 -->
            <flag name="soup" value="2" />          <!-- 01 -->
            <flag name="vegetables" value="4" />    <!-- 10 -->
            <flag name="all" value="7" />           <!-- 11 -->
        </attr>
        <attr name="showTitles" format="boolean" />
        <attr name="selectable" format="boolean"/>
        <attr name="messagePaddingTop" format="boolean" />
    </declare-styleable>

    <declare-styleable name="TimePreference">
        <attr name="useDefaultSummary" format="boolean" />
    </declare-styleable>

    <!--
    An attribute that is the primary colour in the light theme,
    but the secondary colour in the dark theme.
    Similar to colorPrimarySurface.
     -->
    <attr name="colorPrimarySecondary" format="reference" />

    <attr name="alphaEmphasisHigh" format="float"/>
    <attr name="alphaEmphasisMedium" format="float"/>
    <attr name="alphaEmphasisDisabled" format="float"/>
</resources>

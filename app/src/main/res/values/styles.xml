<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    
    <!-- Style for toolbars -->
    <style name="Hydra.Toolbar" parent="Widget.MaterialComponents.Toolbar.PrimarySurface">
        <item name="colorControlNormal">?colorOnPrimarySurface</item>
    </style>

    <style name="Hydra.Tabs.Colored" parent="Widget.MaterialComponents.TabLayout.PrimarySurface">
        <item name="android:elevation" tools:ignore="NewApi">@dimen/material_elevation_app_bar</item>
    </style>

    <!-- Style for long texts; black & lighter font + more line spacing -->
    <style name="Hydra.LongText" parent="Base.TextAppearance.AppCompat.Body1">
        <!-- No longer needed with the new colour scheme -->
        <!--<item name="android:textColor">@android:color/black</item>-->
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:fontFamily" tools:ignore="NewApi">sans-serif-light</item>
    </style>

    <!-- Style for long texts; black & lighter font + more line spacing -->
    <style name="Hydra.LongSubhead" parent="Base.TextAppearance.AppCompat.Subhead">
        <!-- No longer needed with the new colour scheme -->
        <!--<item name="android:textColor">@android:color/black</item>-->
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:fontFamily" tools:ignore="NewApi">sans-serif-light</item>
    </style>

    <!-- Needed for custom views -->
    <style name="Subhead">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/hydra_subhead_text_color</item>
    </style>

    <!-- Transparant text -->
    <style name="TransparentText" parent="@android:style/TextAppearance">
        <item name="android:textColor">#00000000</item>
    </style>

    <!-- Divider style -->
    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

</resources>

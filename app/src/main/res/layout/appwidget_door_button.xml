<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@android:style/Theme.DeviceDefault.DayNight"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="?android:attr/colorBackground"
    android:minWidth="128dp"
    android:minHeight="64dp"
    android:orientation="horizontal"
    tools:ignore="NewApi">

    <ImageButton
        android:id="@+id/close_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="8dp"
        android:contentDescription="@string/wpi_door_close"
        android:padding="12dp"
        android:src="@drawable/ic_door_closed"
        android:tint="?android:attr/colorAccent"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        tools:ignore="UseAppTint" />

    <ImageButton
        android:id="@+id/open_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="8dp"
        android:contentDescription="@string/wpi_door_open"
        android:padding="12dp"
        android:src="@drawable/ic_door_open"
        android:tint="?android:attr/colorAccent"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        tools:ignore="UseAppTint" />

</LinearLayout>

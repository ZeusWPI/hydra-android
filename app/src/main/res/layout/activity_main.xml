<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@id/app_bar_layout"
            android:animateLayoutChanges="true">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                app:layout_scrollFlags="scroll|enterAlways|snap">

                <Spinner
                    android:visibility="gone"
                    android:id="@+id/spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ProgressBar
                    android:visibility="gone"
                    android:id="@+id/spinner_progress"
                    android:layout_width="24dp"
                    android:layout_height="24dp" />

            </android.support.v7.widget.Toolbar>

            <!-- TODO: for some reason adding it dynamically doesn't work. Move this to the fragments instead -->
            <android.support.design.widget.TabLayout
                android:id="@+id/tab_layout"
                app:tabContentStart="@dimen/keyline_tab"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                app:tabMode="fixed"/>

        </android.support.design.widget.AppBarLayout>

        <!-- The main content view where fragments are loaded -->
        <FrameLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <include android:visibility="gone" layout="@layout/x_progress_bar" android:id="@+id/drawer_loading" />
        </FrameLayout>

        <!-- TODO: should this be moved to the fragment instead? -->
        <!-- The menu is a shortcut, because it is only used by the RestoFragment for now -->
        <android.support.design.widget.BottomNavigationView
            android:visibility="gone"
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="@dimen/material_bottom_nav_bar_height"
            app:elevation="@dimen/material_bottom_nav_bar_elevation"
            android:layout_gravity="bottom"
            app:menu="@menu/bottom_resto"
            app:itemIconTint="?attr/colorPrimary"
            app:itemTextColor="?attr/colorPrimary"
            app:itemBackground="?android:colorBackground" />

    </android.support.design.widget.CoordinatorLayout>

    <!-- The navigation drawer that comes from the left -->
    <!-- Note that `android:layout_gravity` needs to be set to 'start' -->
    <android.support.design.widget.NavigationView
        app:headerLayout="@layout/drawer_header"
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/hydra_drawer_background"
        app:menu="@menu/drawer_items"
        android:fitsSystemWindows="true"/>

</android.support.v4.widget.DrawerLayout>
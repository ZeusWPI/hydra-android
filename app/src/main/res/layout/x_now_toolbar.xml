<!-- Cannot have ID due to bug in AS -->
<!-- android:id="@+id/card_description_wrapper" -->
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/now_toolbar_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="8dp"
        android:contentDescription="@string/content_desc_resto"
        android:padding="8dp"
        app:tint="?colorSecondary"
        tools:src="@drawable/tabs_resto"
        tools:ignore="PrivateResource" />

    <TextView
        android:id="@+id/now_toolbar_title"
        style="?textAppearanceBodySmall"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:paddingLeft="8dp"
        android:paddingTop="@dimen/card_title_padding_top"
        android:paddingBottom="@dimen/card_title_padding_top"
        tools:text="Menu voor de toekomst!" />

    <ImageView
        android:id="@+id/now_toolbar_menu"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="8dp"
        android:contentDescription="@string/content_desc_more"
        android:padding="8dp"
        app:srcCompat="@drawable/ic_more_vert"
        app:tint="?colorOnSurface" />

</merge>

<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:id="@+id/card_description_wrapper"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/now_toolbar_icon"
        android:layout_width="16dp"
        android:layout_height="16dp"
        app:srcCompat="@drawable/ic_tabs_menu"
        tools:ignore="MissingPrefix"
        android:tint="@color/ugent_blue_lighter" />

    <TextView
        android:id="@+id/now_toolbar_title"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:textColor="@color/ugent_blue_lighter"
        android:paddingLeft="16dp"
        tools:text="Menu voor de toekomst!" />

    <ImageView
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:tint="@color/ugent_blue_lighter"
        app:srcCompat="@drawable/ic_more_vert_24dp"
        tools:ignore="MissingPrefix"
        android:id="@+id/now_toolbar_menu" />

</LinearLayout>
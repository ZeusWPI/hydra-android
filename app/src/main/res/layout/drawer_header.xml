<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- This FrameLayout enables the Toolbar to have a fixed height. Setting the toolbar's fitsSystemWindows to true
    will mess with the height and is thus not possible -->
    <FrameLayout
        android:fitsSystemWindows="true"
        android:background="?attr/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">

            <ImageView
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:id="@+id/main_logo"
                android:tint="?android:attr/textColorPrimaryInverse"
                app:srcCompat="@drawable/logo_hydra"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:scaleType="fitStart"
                tools:src="@drawable/logo_hydra"
                android:contentDescription="@string/content_desc_hydra_logo" />

        </android.support.v7.widget.Toolbar>

    </FrameLayout>

    <!-- This dummy view enables showing the elevation of the frame layout -->
    <View
        android:layout_width="wrap_content"
        android:layout_height="5dp" />

</LinearLayout>

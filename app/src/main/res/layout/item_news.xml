<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_marginBottom="@dimen/card_spacing"
    android:clickable="true">

    <LinearLayout
        android:paddingLeft="@dimen/material_card_title_block_padding_horizontal"
        android:paddingRight="@dimen/material_card_title_block_padding_horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/name"
            android:paddingTop="@dimen/material_card_title_block_large_padding_top"
            android:textSize="@dimen/material_card_title_block_large_title_text_size"
            tools:text="Dit is een nieuwsartikel! Met een lange titel van meerdere lijnen!" />

        <TextView
            android:paddingTop="@dimen/material_card_title_block_large_subtitle_margin_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/info"
            android:textSize="@dimen/material_card_title_block_subtitle_text_size"
            android:textColor="@color/hydra_text_accent"
            tools:text="Informatie over het artikel"
            android:paddingBottom="@dimen/material_card_title_block_large_padding_bottom"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/article_excerpt"
            android:paddingBottom="@dimen/card_text_padding_bottom_no_content"
            tools:text="Heel mooie text over het artikel!"
            android:maxLines="3"
            android:ellipsize="end" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
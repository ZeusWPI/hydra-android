<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="?android:colorBackground"
    android:foreground="?android:attr/selectableItemBackground"
    android:paddingLeft="@dimen/material_list_icon_first_position_margin_start"
    android:paddingTop="@dimen/list_two_line_padding_horizontal"
    android:paddingBottom="@dimen/list_two_line_padding_horizontal"
    android:clickable="true"
    android:gravity="center_vertical"
    android:baselineAligned="false"
    android:animateLayoutChanges="true">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/material_list_normal_primary_text_size"
            android:id="@+id/name"
            tools:text="Vaknaam" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?android:attr/textColorSecondary"
            android:textSize="@dimen/material_list_normal_secondary_text_size"
            android:id="@+id/subtitle"
            tools:text="Lesgever + code" />

    </LinearLayout>

    <ImageView
        android:id="@+id/unread_icon"
        android:layout_width="@dimen/material_list_icon_size"
        android:layout_height="@dimen/material_list_icon_size"
        android:layout_marginLeft="@dimen/material_list_icon_last_position_margin_horizontal"
        android:layout_marginRight="@dimen/material_list_icon_last_position_margin_horizontal"
        android:scaleType="center"
        android:tint="@color/ugent_blue_lighter"
        app:srcCompat="@drawable/ic_megaphone"
        android:contentDescription="@string/content_desc_unread_icon" />

    <ImageView
        android:id="@+id/drag_handle"
        android:layout_width="@dimen/material_list_icon_size"
        android:layout_height="@dimen/material_list_icon_size"
        android:layout_marginRight="@dimen/material_list_icon_last_position_margin_horizontal"
        android:adjustViewBounds="true"
        android:scaleType="center"
        android:tint="@color/ugent_blue_lighter"
        app:srcCompat="@drawable/ic_drag_handle"
        android:contentDescription="@string/content_desc_reorder"/>

</LinearLayout>
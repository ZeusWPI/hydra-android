<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    app:contentPaddingLeft="@dimen/card_title_padding_vertical"
    app:contentPaddingRight="@dimen/card_title_padding_vertical"
    android:layout_marginBottom="@dimen/card_spacing"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/home_cards_resto_container"
        android:paddingBottom="@dimen/card_title_padding_bottom">

        <LinearLayout
            android:id="@+id/card_description_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/card_title_padding_top"
            android:paddingBottom="@dimen/card_title_padding_top">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_tabs_menu"
                android:tint="@color/ugent_blue_lighter" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/ugent_blue_lighter"
                android:paddingLeft="16dp"
                android:id="@+id/card_description"
                tools:text="Menu voor de toekomst!" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:tint="@color/ugent_blue_lighter"
                android:src="@drawable/ic_more_vert_24dp"
                android:id="@+id/card_description_popup"/>

        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>
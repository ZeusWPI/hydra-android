<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <PreferenceCategory
        android:title="@string/pref_daily_notifications_title"
        android:key="pref_key_daily_notifications">
        <CheckBoxPreference
            android:key="pref_key_daily_notifications_checkbox"
            android:summary="@string/pref_daily_notifications_checkbox_summary"
            android:title="@string/pref_daily_notifications_checkbox_title"
            android:defaultValue="false"/>
        <Preference
            android:key="pref_daily_notifications_time"
            android:dependency="pref_key_daily_notifications_checkbox"
            android:summary="@string/pref_daily_notifications_time_summary"
            android:title="@string/pref_daily_notifications_time_title"/>
        <Preference
            android:key="@string/daily_notifications_test_button"
            android:summary="@string/pref_daily_notifications_test_summary"
            android:title="@string/pref_daily_notifications_test_title"
            android:widgetLayout="@layout/daily_notifications_testbutton"/>
    </PreferenceCategory>
    <!-- activiteiten -->
    <PreferenceCategory
        android:title="Activiteiten"
        android:key="pref_key_cat1"
        android:layout_height="match_parent"
        android:layout_width="match_parent">
        <CheckBoxPreference
            android:key="pref_association_checkbox"
            android:summary="kies van welke verenigingen activiteiten te zien zijn"
            android:title="filter"
            android:defaultValue="false"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <PreferenceScreen
            android:key="associationPrefListScreen"
            android:dependency="pref_association_checkbox"

            android:title="selectie"
            android:persistent="false">










        </PreferenceScreen>


    </PreferenceCategory>

    <!-- end -->
</PreferenceScreen>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <!-- A CardView that contains a TextView -->
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp"
        card_view:contentPaddingLeft="15dp"
        card_view:contentPaddingRight="15dp"
        card_view:contentPaddingTop="3dp"
        card_view:contentPaddingBottom="7dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="5dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/head"
                    >

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|left">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="zeer lange titel hahahaha"
                            android:id="@+id/name"
                            android:layout_gravity="center_vertical"
                            android:padding="1dp"
                            android:textColor="@color/ugent_blue_dark" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/star"
                            android:layout_gravity="right"
                            android:src="@drawable/star"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="11 maart 2014, pipo de clown"
                        android:id="@+id/info"
                        android:layout_gravity="center_vertical"
                        android:padding="1dp"
                        android:textColor="@color/ugent_blue_dark" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lorem ipsum dolor sit amet, eius erat nec ea. Pri ei quas consectetuer, his novum dicant probatus at. Nec menandri patrioque ne, ei vivendum accusata intellegebat est. Per ad corpora referrentur, ne ridens volutpat omittantur ius, virtute probatus ex nam. Libris partiendo at vel.  Eu aliquam scaevola interesset sit, his possim gubergren in. Vis ex quando deterruisset, eum id volumus pertinacia ullamcorper, cu sonet apeirian torquatos his. Ut cum inani nostrum, cum id meliore habemus, modo velit similique eos ad. Ne mollis commodo cum, in impetus percipitur voluptatibus ius, eum in ferri appetere. Sint discere albucius vim an, ut atqui laoreet usu, ius justo sensibus salutandi ad. Eu paulo alienum delicata pri, his esse elitr ex, liber soluta ceteros et mea."
                    android:id="@+id/summary"
                    android:padding="5dp"
                    android:textColor="@color/ugent_blue_dark"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>
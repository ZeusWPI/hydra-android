<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

	<PreferenceCategory
		android:title="@string/pref_theme_night_mode_title">
		<ListPreference
			android:key="pref_theme_night_mode"
			android:title="@string/pref_theme_use_night_title"
			android:summary="%s" />
	</PreferenceCategory>

	<PreferenceCategory
		android:title="@string/pref_theme_explanations">
		<Preference
			android:key="pref_theme_battery"
			android:persistent="false"
			android:title="@string/pref_theme_night_mode_battery"
			android:summary="@string/pref_theme_night_mode_battery_desc" />

		<Preference
			android:key="pref_theme_system"
			android:persistent="false"
			android:title="@string/pref_theme_night_mode_system"
			android:summary="@string/pref_theme_night_mode_system_desc" />

		<Preference
			android:persistent="false"
			android:title="@string/pref_theme_night_mode_never"
			android:summary="@string/pref_theme_night_mode_never_desc" />

		<Preference
			android:persistent="false"
			android:title="@string/pref_theme_night_mode_always"
			android:summary="@string/pref_theme_night_mode_always_desc" />

	</PreferenceCategory>
</PreferenceScreen>
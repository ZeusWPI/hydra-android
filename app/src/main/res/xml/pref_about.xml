<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <Preference
        android:key="pref_about_version"
        android:title="@string/pref_about_version_title"
        android:summary="@string/pref_about_version_summary"
        android:persistent="false" />

    <Preference
        android:key="pref_about_changelog"
        android:title="@string/pref_about_changelog_title"
        android:summary="@string/pref_about_changelog_summary"
        android:persistent="false">
        <intent
            android:action="android.intent.action.VIEW"
            android:data="https://github.com/ZeusWPI/hydra-android/releases" />
    </Preference>

    <Preference
        android:key="pref_about_issues"
        android:title="@string/pref_about_issues_title"
        android:summary="@string/pref_about_issues_summary"
        android:persistent="false">
        <intent
            android:action="android.intent.action.VIEW"
            android:data="https://github.com/ZeusWPI/hydra-android/issues" />
    </Preference>

    <Preference
        android:key="pref_about_licenses"
        android:title="@string/pref_about_licenses_title"
        android:summary="@string/pref_about_licenses_summary"
        android:persistent="false" />

    <Preference
        android:iconSpaceReserved="true"
        android:key="pref_about_creator_zeus"
        android:title="@string/pref_about_creator_zeus"
        android:persistent="false"
        android:singleLineTitle="false"
        tools:ignore="UnusedAttribute">
        <intent
            android:action="android.intent.action.VIEW"
            android:data="https://zeus.ugent.be" />
    </Preference>
    <Preference
        android:iconSpaceReserved="true"
        android:key="pref_about_creator_dsa"
        android:title="@string/pref_about_creator_dsa"
        android:persistent="false"
        android:singleLineTitle="false"
        tools:ignore="UnusedAttribute">
        <intent
            android:action="android.intent.action.VIEW"
            android:data="http://student.ugent.be" />
    </Preference>

</PreferenceScreen>
<?xml version="1.0" encoding="utf-8"?>
<preference-headers xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Home screen -->
    <header
        android:fragment="be.ugent.zeus.hydra.feed.preferences.HomeFragment"
        android:title="@string/pref_home_title"
        android:summary="@string/pref_home_feed_description" />

    <header
        android:title="@string/pref_activities_title"
        android:summary="@string/pref_activities_description">
        <intent
            android:action="android.intent.action.VIEW"
            android:targetPackage="be.ugent.zeus.hydra"
            android:targetClass="be.ugent.zeus.hydra.association.preference.AssociationSelectPrefActivity" />
    </header>

    <!-- Resto -->
    <header
        android:fragment="be.ugent.zeus.hydra.resto.RestoPreferenceFragment"
        android:title="@string/pref_resto_title"
        android:summary="@string/pref_resto_description" />

    <!-- Minerva -->
    <header
        android:fragment="be.ugent.zeus.hydra.minerva.preference.MinervaPreferenceFragment"
        android:title="@string/pref_minerva_title"
        android:summary="@string/pref_minerva_description" />

    <!-- News -->
    <header
        android:fragment="be.ugent.zeus.hydra.association.news.ArticlePreferenceFragment"
        android:title="@string/pref_header_article_title"
        android:summary="@string/pref_header_article_desc" />

    <!-- Theme -->
    <header
        android:fragment="be.ugent.zeus.hydra.theme.ThemePreferenceFragment"
        android:title="@string/pref_header_theme_title"
        android:summary="@string/pref_header_theme_desc" />

    <!-- SKO -->
    <header
        android:fragment="be.ugent.zeus.hydra.sko.preferences.SkoPreferencesFragment"
        android:title="@string/pref_notifications_sko_title"
        android:summary="@string/pref_sko_description" />

    <!-- About -->
    <header
        android:fragment="be.ugent.zeus.hydra.common.preferences.AboutFragment"
        android:title="@string/pref_about_header_title"
        android:summary="@string/pref_about_header_summary" />
</preference-headers>
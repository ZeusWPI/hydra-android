<?xml version="1.0" encoding="utf-8"?>
<preference-headers xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Home screen -->
    <header
        android:fragment="be.ugent.zeus.hydra.feed.preferences.HomeFragment"
        android:title="@string/pref_overview_feed_title"
        android:summary="@string/pref_overview_feed_desc" />

    <header
        android:title="@string/pref_overview_activities_title"
        android:summary="@string/pref_overview_activities_desc">
        <intent
            android:action="android.intent.action.VIEW"
            android:targetPackage="be.ugent.zeus.hydra"
            android:targetClass="be.ugent.zeus.hydra.association.preference.AssociationSelectPrefActivity" />
    </header>

    <!-- Resto -->
    <header
        android:fragment="be.ugent.zeus.hydra.resto.RestoPreferenceFragment"
        android:title="@string/pref_overview_resto_title"
        android:summary="@string/pref_overview_resto_desc" />

    <!-- Minerva -->
    <header
        android:fragment="be.ugent.zeus.hydra.minerva.preference.MinervaPreferenceFragment"
        android:title="@string/pref_overview_minerva_title"
        android:summary="@string/pref_overview_minerva_desc" />

    <!-- News -->
    <header
        android:fragment="be.ugent.zeus.hydra.common.article.CustomTabPreferenceFragment"
        android:title="@string/pref_overview_article_title"
        android:summary="@string/pref_overview_article_desc" />

    <!-- Theme -->
    <header
        android:fragment="be.ugent.zeus.hydra.common.preferences.ThemeFragment"
        android:title="@string/pref_overview_theme_title"
        android:summary="@string/pref_overview_theme_desc" />

    <!-- SKO -->
    <header
        android:fragment="be.ugent.zeus.hydra.sko.preferences.SkoPreferencesFragment"
        android:title="@string/pref_overview_sko_title"
        android:summary="@string/pref_overview_sko_desc" />

    <!-- About -->
    <header
        android:fragment="be.ugent.zeus.hydra.common.preferences.AboutFragment"
        android:title="@string/pref_overview_about_title"
        android:summary="@string/pref_overview_about_desc" />
</preference-headers>